

<div class="row">
    <div class="col-sm-4">
        <h1>Category</h1>
        <form action="/admin/categories/create" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" placeholder="Enter Title" class="form-control ">
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Create category  </button>
        </div>
        </form>
    </div>
</div>
    <br>
    <hr>
    <div class="col-sm-8">
        <h1>Categories</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Name</th>
                    <th>Edit</th>
                    <th>Delete</th>
                   
                </tr>
            </thead>
            
            <tbody>
               {{#each categories}}
                <tr>
                    <td>{{_id}}</td>
                    <td>{{name}}</td>
                    <td>
                        <a href="/admin/categories/edit/{{id}}" class="btn btn-info">Edit</a>
                    </td>
                    <td>

                        
                        <form action="/admin/categories/{{id}}?_method=delete" method="POST">
                            <button type="submit" class="btn btn-danger"> Delete </button>
                        </form> 
                    </td>
                        
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
